{
  "manifest_version": 3,
  "name": "Browser History Organizer",
  "version": "1.0",
  "description": "Organize and group your browsing history by website categories with favorites support",
  "permissions": [
    "history",
    "activeTab",
    "storage",
    "contextMenus",
    "system.display"
  ],
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Browser History Organizer",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
